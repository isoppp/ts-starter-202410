{
  "name": "@repo/api-hono",
  "type": "module",
  "files": ["dist/src"],
  "scripts": {
    "start": "echo $DATABASE_URL && npx prisma migrate deploy && tsx src/index.ts",
    "dev": "dotenv -e .env.local -- tsx watch src/index.ts",
    "dev-email": "dotenv -e .env.local -- email dev --dir ./src/infrastructure/email/templates",
    "export-type": "rm -rf dist && npx tsc --noEmit false --declaration --outDir dist",
    "migrate": "dotenv -e .env.local -- prisma migrate dev",
    "migrate:reset": "dotenv -e .env.local -- prisma migrate reset",
    "prisma:studio": "dotenv -e .env.development -- prisma studio",
    "seed": "dotenv -e .env.local -- tsx prisma/seed/index.ts",
    "postinstall": "prisma generate",
    "lint": "biome check",
    "lint-fix": "biome check --write --unsafe",
    "typecheck": "tsc",
    "test": "dotenv -e .env.test -- prisma migrate reset --force --skip-seed && dotenv -e .env.test -- vitest"
  },
  "dependencies": {
    "@google-cloud/error-reporting": "3.0.5",
    "@google-cloud/logging": "11.2.0",
    "@google-cloud/logging-winston": "6.0.0",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "2.4.1",
    "@hono/node-server": "1.13.7",
    "@hono/trpc-server": "0.3.4",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/instrumentation-http": "0.57.0",
    "@opentelemetry/instrumentation-winston": "0.44.0",
    "@opentelemetry/sdk-node": "0.57.0",
    "@prisma/client": "5.22.0",
    "@prisma/instrumentation": "5.22.0",
    "@quramy/prisma-fabbrica": "2.2.2",
    "@react-email/components": "0.0.31",
    "@trpc/server": "11.0.0-rc.666",
    "chalk": "5.4.1",
    "date-fns": "4.1.0",
    "dotenv-cli": "7.4.4",
    "hono": "4.6.14",
    "hono-rate-limiter": "0.4.2",
    "prisma": "5.22.0",
    "react": "18.3.1",
    "react-email": "3.0.4",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "valibot": "0.42.1",
    "winston": "3.17.0",
    "wretch": "2.11.0"
  },
  "devDependencies": {
    "@types/node": "22.10.2",
    "@types/react": "18.3.18",
    "npm-run-all": "4.1.5",
    "vite": "5.4.11",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.1.8",
    "vitest-environment-vprisma": "1.3.0"
  }
}
